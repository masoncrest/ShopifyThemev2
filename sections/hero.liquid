{% comment %}
  Hero section for homepage
{% endcomment %}

<section id="hero" class="hero-section">
  <div id="hero-video-container" class="hero-video"></div>
  <div class="hero-overlay"></div>

  {%- if section.settings.show_logo -%}
    <div class="hero-logo-container">
      {%- if settings.logo != blank -%}
        <img src="{{ settings.logo | image_url: width: 250 }}" alt="{{ shop.name }}" width="250" height="auto" style="margin: 0 auto;">
      {%- else -%}
        <div class="hero-logo-text">MASON CREST</div>
      {%- endif -%}
    </div>
  {%- endif -%}

  {%- if section.settings.hero_subtitle != blank -%}
    <div class="hero-subtitle-container">
      <p class="hero-subtitle" style="color: {{ section.settings.subtitle_color }};">
        {{ section.settings.hero_subtitle }}
      </p>
      {%- if section.settings.button_text != blank -%}
        <a href="{{ section.settings.button_link }}" class="hero-button" style="background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }};">
          {{ section.settings.button_text }}
        </a>
      {%- endif -%}
    </div>
  {%- endif -%}

</section>

<style>
  .hero-section {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
  }

  .hero-video {
    position: absolute;
    top: -5%;
    left: -5%;
    width: 110%;
    height: 110%;
    pointer-events: none;
    z-index: 0;
  }

  .hero-video iframe {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    transform: scale(1.35);
    transform-origin: center center;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(rgba(26, 26, 26, 0.4), rgba(26, 26, 26, 0.4));
    z-index: 1;
  }

  .hero-logo-container {
    position: absolute;
    top: 10rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
    text-align: center;
  }

  .hero-logo-text {
    font-size: 2.5rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    color: #FFFFFF;
    text-transform: uppercase;
  }

  .hero-subtitle-container {
    position: absolute;
    bottom: 6rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
    width: 100%;
    max-width: 800px;
    text-align: center;
    padding: 0 2rem;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    font-weight: 400;
    line-height: 1.6;
    margin: 0 0 2rem 0;
  }

  .hero-button {
    display: inline-block;
    padding: 1rem 3rem;
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: opacity 0.3s ease, transform 0.2s ease;
  }

  .hero-button:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .hero-logo-container {
      top: 6rem;
    }

    .hero-logo-text {
      font-size: 1.8rem;
    }

    .hero-subtitle-container {
      bottom: 4rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .hero-button {
      padding: 0.875rem 2.5rem;
      font-size: 0.85rem;
    }
  }
</style>

<script>
  (function() {
    var heroVideoContainer = document.getElementById('hero-video-container');
    if (!heroVideoContainer) return;

    var iframe = document.createElement('iframe');
    iframe.setAttribute('src', 'https://www.youtube.com/embed/jItoDFlxDu4?autoplay=1&mute=1&controls=0&loop=1&playlist=jItoDFlxDu4&playsinline=1&rel=0&showinfo=0&modestbranding=1&iv_load_policy=3&disablekb=1&fs=0&enablejsapi=1&widgetid=1');
    iframe.setAttribute('frameborder', '0');
    iframe.setAttribute('allow', 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture');
    iframe.setAttribute('allowfullscreen', '');
    iframe.setAttribute('style', 'position: absolute; top: 0; left: 0; width: 100%; height: 100%;');
    iframe.setAttribute('title', 'Background Video');

    heroVideoContainer.innerHTML = '';
    heroVideoContainer.appendChild(iframe);

    var forcePlay = function() {
      iframe.contentWindow.postMessage('{"event":"command","func":"playVideo","args":""}', '*');
      iframe.contentWindow.postMessage('{"event":"command","func":"mute","args":""}', '*');
    };

    setTimeout(forcePlay, 500);
    setTimeout(forcePlay, 1000);
    setTimeout(forcePlay, 2000);
    setTimeout(forcePlay, 3000);

    setInterval(forcePlay, 5000);

    ['visibilitychange', 'focus', 'pageshow'].forEach(function(event) {
      document.addEventListener(event, forcePlay);
    });
  })();
</script>

{% schema %}
