{% comment %}
  Footer with three columns and centered logo
{% endcomment %}

<footer class="footer">
  <div class="footer-container">
    <div class="footer-grid">
      <div class="footer-column">
        <h4>{{ section.settings.column_1_heading | default: 'Shop' }}</h4>
        <ul class="footer-links">
          <li><a href="/collections/all">{{ section.settings.link_all_products | default: 'All Products' }}</a></li>
          <li><a href="/collections">{{ section.settings.link_categories | default: 'Categories' }}</a></li>
          <li><a href="/collections/best-sellers">{{ section.settings.link_best_sellers | default: 'Best Sellers' }}</a></li>
          <li><a href="/collections/new-arrivals">{{ section.settings.link_new_arrivals | default: 'New Arrivals' }}</a></li>
        </ul>
      </div>

      <div class="footer-column">
        <h4>{{ section.settings.column_2_heading | default: 'About' }}</h4>
        <ul class="footer-links">
          <li><a href="/pages/our-story">{{ section.settings.link_our_story | default: 'Our Story' }}</a></li>
          <li><a href="/pages/mission">{{ section.settings.link_mission | default: 'Mission' }}</a></li>
          <li><a href="/pages/sustainability">{{ section.settings.link_sustainability | default: 'Sustainability' }}</a></li>
        </ul>
      </div>

      <div class="footer-column">
        <h4>{{ section.settings.column_3_heading | default: 'Support' }}</h4>
        <ul class="footer-links">
          <li><a href="/pages/contact">{{ section.settings.link_contact | default: 'Contact' }}</a></li>
          <li><a href="/pages/faq">{{ section.settings.link_faq | default: 'FAQ' }}</a></li>
          <li><a href="/policies/shipping-policy">{{ section.settings.link_shipping | default: 'Shipping & Returns' }}</a></li>
          <li><a href="/policies/privacy-policy">{{ section.settings.link_privacy | default: 'Privacy Policy' }}</a></li>
          <li><a href="/policies/terms-of-service">{{ section.settings.link_terms | default: 'Terms of Service' }}</a></li>
        </ul>
      </div>
    </div>

    <div class="footer-bottom">
      <div class="footer-logo">
        {%- if settings.logo != blank -%}
          <img src="{{ settings.logo | image_url: width: 180 }}" alt="{{ shop.name }}" width="180" height="auto">
        {%- else -%}
          MASON CREST
        {%- endif -%}
      </div>
      <p style="margin-top: 1.5rem; color: rgba(255, 255, 255, 0.6); font-size: 0.85rem;">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text | default: 'All rights reserved.' }}
      </p>
    </div>
  </div>
</footer>

