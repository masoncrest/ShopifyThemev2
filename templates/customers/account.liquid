{% comment %}
  Customer account page
{% endcomment %}

<div class="customer-page">
  <div class="account-container">
    <div class="customer-header">
      <h1>My Account</h1>
      <p>Welcome back, {{ customer.first_name }}!</p>
    </div>

    <div class="account-grid">
      <div class="account-section">
        <div class="section-header">
          <h2>Account Details</h2>
          <a href="https://mason-crest.myshopify.com/account/addresses" class="btn btn-secondary-small">Manage Addresses</a>
        </div>

        <div class="account-info">
          <div class="info-item">
            <span class="info-label">Name:</span>
            <span class="info-value">{{ customer.first_name }} {{ customer.last_name }}</span>
          </div>
          <div class="info-item">
            <span class="info-label">Email:</span>
            <span class="info-value">{{ customer.email }}</span>
          </div>
          <div class="info-item">
            <span class="info-label">Member since:</span>
            <span class="info-value">{{ customer.created_at | date: "%B %d, %Y" }}</span>
          </div>
        </div>

        <div class="account-actions">
          <a href="{{ routes.account_logout_url }}" class="btn btn-secondary">Sign Out</a>
        </div>
      </div>

      <div class="account-section">
        <div class="section-header">
          <h2>Order History</h2>
        </div>

        {%- if customer.orders.size > 0 -%}
          <div class="orders-list">
            {%- for order in customer.orders -%}
              <div class="order-card">
                <div class="order-header">
                  <h3>Order #{{ order.name }}</h3>
                  <span class="order-status order-status-{{ order.financial_status }}">
                    {{ order.financial_status_label }}
                  </span>
                </div>

                <div class="order-details">
                  <div class="order-detail-item">
                    <span class="detail-label">Date:</span>
                    <span class="detail-value">{{ order.created_at | date: "%B %d, %Y" }}</span>
                  </div>
                  <div class="order-detail-item">
                    <span class="detail-label">Total:</span>
                    <span class="detail-value">{{ order.total_price | money }}</span>
                  </div>
                  <div class="order-detail-item">
                    <span class="detail-label">Fulfillment:</span>
                    <span class="detail-value">{{ order.fulfillment_status_label }}</span>
                  </div>
                </div>

                <div class="order-items">
                  {%- for line_item in order.line_items -%}
                    <div class="order-item">
                      {%- if line_item.image -%}
                        <img src="{{ line_item.image | image_url: width: 60 }}" alt="{{ line_item.title }}" width="60" height="60">
                      {%- endif -%}
                      <div class="order-item-info">
                        <span class="item-title">{{ line_item.title }}</span>
                        <span class="item-quantity">Qty: {{ line_item.quantity }}</span>
                      </div>
                      <span class="item-price">{{ line_item.final_line_price | money }}</span>
                    </div>
                  {%- endfor -%}
                </div>

                <div class="order-actions">
                  <a href="{{ order.customer_url }}" class="btn btn-secondary-small">View Order</a>
                </div>
              </div>
            {%- endfor -%}
          </div>
        {%- else -%}
          <div class="empty-state">
            <p>You haven't placed any orders yet.</p>
            <a href="/collections/all" class="btn btn-primary">Start Shopping</a>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

<style>
  .customer-page {
    min-height: calc(100vh - 200px);
    padding: 4rem 2rem;
    background-image: linear-gradient(rgba(26, 26, 26, 0.85), rgba(26, 26, 26, 0.85)), url('{{ "image.png" | asset_url }}');
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
  }

  .account-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .customer-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .customer-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: var(--color-white);
  }

  .customer-header p {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.7);
    letter-spacing: 0.05em;
  }

  .account-grid {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
  }

  .account-section {
    background-color: rgba(0, 0, 0, 0.7);
    padding: 2.5rem;
    border-radius: 8px;
    backdrop-filter: blur(10px);
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .section-header h2 {
    font-size: 1.5rem;
    color: var(--color-white);
  }

  .account-info {
    margin-bottom: 2rem;
  }

  .info-item {
    display: flex;
    justify-content: space-between;
    padding: 1rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .info-item:last-child {
    border-bottom: none;
  }

  .info-label {
    font-size: 0.9rem;
    font-weight: 500;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.7);
  }

  .info-value {
    font-size: 1rem;
    color: var(--color-white);
  }

  .account-actions {
    margin-top: 2rem;
  }

  .orders-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .order-card {
    background-color: rgba(255, 255, 255, 0.05);
    padding: 2rem;
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .order-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .order-header h3 {
    font-size: 1.2rem;
    color: var(--color-white);
  }

  .order-status {
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-size: 0.85rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .order-status-paid {
    background-color: rgba(76, 175, 80, 0.2);
    color: #90ee90;
  }

  .order-status-pending {
    background-color: rgba(255, 193, 7, 0.2);
    color: #ffd54f;
  }

  .order-details {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .order-detail-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .detail-label {
    font-size: 0.85rem;
    font-weight: 500;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.6);
  }

  .detail-value {
    font-size: 1rem;
    color: var(--color-white);
  }

  .order-items {
    margin-bottom: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .order-item {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 1rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .order-item:last-child {
    border-bottom: none;
  }

  .order-item img {
    width: 60px;
    height: 60px;
    object-fit: cover;
    border-radius: 4px;
  }

  .order-item-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
  }

  .item-title {
    font-size: 0.95rem;
    color: var(--color-white);
  }

  .item-quantity {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .item-price {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-white);
  }

  .order-actions {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
  }

  .empty-state p {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 2rem;
  }

  .btn-secondary-small {
    padding: 0.8rem 1.5rem;
    font-size: 0.85rem;
  }

  @media screen and (max-width: 989px) {
    .account-grid {
      grid-template-columns: 1fr;
    }

    .order-details {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }

  @media screen and (max-width: 749px) {
    .customer-header h1 {
      font-size: 2rem;
    }

    .account-section {
      padding: 2rem;
    }

    .section-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .order-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .order-item {
      flex-wrap: wrap;
    }

    .order-item-info {
      flex: 1 1 100%;
    }
  }
</style>
