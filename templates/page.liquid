{% comment %}
  Default page template
{% endcomment %}

<style>
  .page-wrapper {
    min-height: 60vh;
    padding: 8rem 0 6rem;
    background: #1A1A1A;
  }

  .page-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .page-title {
    text-align: center;
    margin-bottom: 3rem;
    color: #FFFFFF;
    font-size: 3rem;
    font-weight: 700;
    letter-spacing: 0.02em;
  }

  .page-content {
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.1rem;
  }

  .page-content p {
    margin-bottom: 1.5rem;
  }

  .page-content h2 {
    color: #FFFFFF;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    font-size: 1.8rem;
    font-weight: 600;
  }

  .page-content h3 {
    color: #FFFFFF;
    margin-top: 2rem;
    margin-bottom: 0.8rem;
    font-size: 1.4rem;
    font-weight: 600;
  }

  .page-content ul,
  .page-content ol {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .page-content li {
    margin-bottom: 0.5rem;
  }

  .page-content a {
    color: #FFFFFF;
    text-decoration: underline;
    transition: opacity 0.3s ease;
  }

  .page-content a:hover {
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .page-wrapper {
      padding: 6rem 0 4rem;
    }

    .page-title {
      font-size: 2.2rem;
    }

    .page-content {
      font-size: 1rem;
    }

    .page-content h2 {
      font-size: 1.5rem;
    }

    .page-content h3 {
      font-size: 1.2rem;
    }
  }
</style>

<div class="page-wrapper">
  <div class="page-container">
    <h1 class="page-title">{{ page.title }}</h1>
    <div class="page-content">
      {{ page.content }}
    </div>
  </div>
</div>
